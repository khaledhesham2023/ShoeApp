<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hintOfRed</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/greenYellow</item>
    </style>


    <!-- Style designed for instructions text -->
    <style name="instructions">
        <item name="android:textColor">@color/greenYellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">@dimen/statementMargin</item>
        <item name="android:layout_marginEnd">@dimen/statementMargin</item>
        <item name="maxWidth">@dimen/statementWidth</item>
        <item name="android:layout_marginBottom">@dimen/statementMargin</item>

    </style>
    <!-- Style designed for buttons -->
    <style name="buttonStyle">
        <item name="android:textColor">@color/codGray</item>
        <item name="background">@color/greenYellow</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">20sp</item>
        <item name="android:layout_height">@dimen/buttonLoginHeight</item>
        <item name="android:layout_width">@dimen/zeroConstraint</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="backgroundTint">@color/greenYellow</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Style designed for labels -->
    <style name="labelsStyle">
        <item name="android:textColor">@color/greenYellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_start_end</item>
    </style>

    <!-- Style designed for inputs -->
    <style name="inputTextLabel">
        <item name="android:textColor">@color/greenYellow</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_start_end</item>
        <item name="android:shadowColor">@color/greenYellow</item>
        <item name="android:textColorHint">@color/greenYellowHint</item>
        <item name="android:backgroundTint">@color/greenYellowHint</item>
    </style>

    <!-- Styled designed for app title -->
    <style name="title">
        <item name="android:layout_marginStart">@dimen/layout_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_start_end</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/greenYellow</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
